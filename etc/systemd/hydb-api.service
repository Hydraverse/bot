[Unit]
Description=Hydraverse DB API Service
After=network.target

[Service]
Type=simple
UMask=022
WorkingDirectory=/home/hyve/app/db/
ExecStart=/home/hydb/app/db/env/db/bin/python -O -m uvicorn hydb.api.__main__:app --reload
Restart=on-failure
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=default.target
